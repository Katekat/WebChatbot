            if (msg.trim() == '') {
                return false;
            }

            generate_message1(msg, 'user');

            var buttons = [
                {
                    name: 'Existing bot',
                    value: 'existing'
                },
                {
                    name: 'New bot',
                    value: 'new'
                }
            ];
            setTimeout(function () {
                generate_message2(msg, 'bot');
            }, 1000)
        });

        function generate_message1(msg, type) {
            msg_id++;
            var str = "";
            str += "<div id='cm-msg-" + msg_id + "' class=\"chat-msg " + type + "\">";
            str += "          <div class=\"cm-msg-text\">";
            str += msg;
            str += "          <\/div>";
            str += "        <\/div>";
            $('.chat-logs').append(str);
            $('#cm-msg-' + msg_id).hide().fadeIn(300);
            if (type == 'user') {
                $('#chat-input').val('');
            }
            $('.chat-logs').stop().animate({ scrollTop: $('.chat-logs')[0].scrollHeight }, 1000);
        };

        function generate_message2(msg, type) {
            msg_id++;
